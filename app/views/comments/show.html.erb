<p>
	<%= @comment.body %>
</p>

<% if current_user == @comment.user %>
<ul class="nav nav-pills">
	<li role="presentation"><%= link_to "Edit", edit_post_comment_path(@post, @comment) %></li>
	<li role="presentation"><%= link_to "Delete", post_comment_path(@post, @comment), data: { confirm: "Are you sure?" }, method: :delete %></li>
</ul>
<% end %>